@model IEnumerable<FinalProjectITI.Models.Blog>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Blog_Title)
            </th>
            <th scope="col" style="width:25%">
                @Html.DisplayNameFor(model => model.Blog_Content)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Blog_Date)
            </th>
            <th scope="col">
                <label>Image</label>
            </th>

            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr >
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Blog_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blog_Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blog_Date)
            </td>
            <td>
                <img src="~/images/@item.Blog_Image" alt="Alternate Text" width="100" height="100" />
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Blog_ID">Edit</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Blog_ID">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Blog_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
