@model FinalProjectITI.Models.Blog

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog_ID" />
            <div class="form-group">
                <label asp-for="Blog_Title" class="control-label"></label>
                <input asp-for="Blog_Title" class="form-control" />
                <span asp-validation-for="Blog_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog_Content" class="control-label"></label>
                <input asp-for="Blog_Content" class="form-control" />
                <span asp-validation-for="Blog_Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog_Date" class="control-label"></label>
                <input asp-for="Blog_Date" class="form-control" />
                <span asp-validation-for="Blog_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog_Image" class="control-label"></label>
                <input type="file" asp-for="Blog_Image" name="image" class="form-control" />
                <span asp-validation-for="Blog_Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
