@model FinalProjectITI.ViewModel.EditUserViewModel

@{
    ViewBag.Title = "Edit Users";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Email"  class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="UserName"  class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListUsers">Cancel</a>
        </div>
    </div>

</form>



<div class="card">
    <div class="card-header">
        <h3>User Roles</h3>
    </div>
    <div class="card-body">

        @if (!Model.Roles.Any())
        {
            <h5 class="card-title">None At The Moment!</h5>


        }
        else
        {
            foreach (var role in Model.Roles)
            {
                <h5 class="card-title">@role</h5>
            }

        }

    </div>

    <div class="card-footer">
        <a asp-action="Edit" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Manage Role</a>

    </div>

</div>



<div>
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
