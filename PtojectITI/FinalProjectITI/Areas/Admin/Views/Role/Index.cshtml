@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>


@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<a class="btn btn-success" style="width:auto" asp-action="CreateRole">
    Add New Role
</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">
                Role Name
            </th>

            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Any())
        {

            foreach (var role in Model)
            {

                <tr>
                    <td scope="row">
                        @role.Name
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@role.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="DeleteRole" asp-route-Id="@role.Id">Delete</a>

                    </td>
                </tr>



            }

        }

        else
        {
            <div class="card">
                <div class="card-header">
                    No Role Created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary" style="width:auto" asp-action="CreateRole">
                        Create Role
                    </a>
                </div>


            </div>
        }
    </tbody>
</table>
